{
  "name": "base-monorepo",
  "private": true,
  "scripts": {
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "build": "yarn clean && yarn build:client && yarn build:api",
    "start": "concurrently --kill-others \"node dist/api\" \"node dist/ssr\"",
    "start:api": "node dist/api",
    "clean": "rm -rf ./dist",
    "build:client": "lerna run build --scope=@app/client --stream",
    "build:api": "lerna run build --scope=@app/api --stream",
    "dev": "concurrently \"yarn docker:dev:up\" \"yarn dev:client\" ",
    "dev:api": "lerna run dev --scope=@app/api --stream",
    "dev:client": "lerna run dev --scope=@app/client --stream",
    "docker:dev:up": "docker-compose -f docker/docker-compose.dev.yml up -d"
  },
  "workspaces": [
    "client",
    "api"
  ],
  "devDependencies": {
    "concurrently": "^6.2.1",
    "lerna": "^4.0.0"
  }
}
