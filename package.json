{
  "name": "base-monorepo",
  "private": true,
  "scripts": {
    "build": "yarn clean && yarn build:client && yarn build:server",
    "start": "concurrently --kill-others \"node dist/api\" \"node dist/server\"",
    "clean": "rm -rf ./dist",
    "build:client": "lerna run build --scope=@app/client --stream",
    "build:server": "lerna run build --scope=@app/server --stream"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "concurrently": "^6.2.1",
    "lerna": "^4.0.0"
  }
}
