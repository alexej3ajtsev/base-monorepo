{
  "include": [
    "@types/**/*",
    "src/components/**/*",
    "src/client/**/*",
    "src/server/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types",
      "./@types"
    ],
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../dist",
    "baseUrl": ".",
    "paths": {
      "src": [
        "./src"
      ],
      "components": ["./src/components"],
    }
  },
  "exclude": [
    "node_modules",
    "../node_modules",
  ]
}
