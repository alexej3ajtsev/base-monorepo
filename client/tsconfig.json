{
  "include": [
    "declaration.d.ts",
    "@types/**/*",
    "src/**/*",
  ],
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types",
      "./@types"
    ],
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../dist",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@core/*": [
        "src/@core/*"
      ],
      "@components/*": [
        "src/components/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "../node_modules",
  ]
}
